{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "module": "es6",
    "lib": ["es2015", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "target": "es5",
    "allowJs": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "types": ["node", "webpack-env"]
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "dist"]
}
